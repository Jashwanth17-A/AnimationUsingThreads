<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Realistic Kids Animation</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background: linear-gradient(to top, #87CEEB, #ffffff); /* Sky gradient */
    }

    #sun {
      position: absolute;
      width: 100px;
      height: 100px;
      background: radial-gradient(circle, #FFD700, #FFA500);
      border-radius: 50%;
      top: 50px;
      left: 50px;
      box-shadow: 0 0 30px #FFD700;
    }

    #cloud {
      position: absolute;
      top: 100px;
      left: 0;
    }

    .cloud-part {
      position: absolute;
      background: white;
      border-radius: 50%;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .cloud-part:nth-child(1) { width: 100px; height: 60px; left: 0; top: 0; }
    .cloud-part:nth-child(2) { width: 100px; height: 60px; left: 30px; top: -20px; }
    .cloud-part:nth-child(3) { width: 100px; height: 60px; left: 60px; top: 0; }

    #car {
      position: absolute;
      width: 120px;
      height: 50px;
      background: linear-gradient(to right, #FF0000, #AA0000);
      top: 370px;
      left: 0;
      border-radius: 10px;
      box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
    }

    .wheel {
      position: absolute;
      background: radial-gradient(circle, #333, #000);
      border-radius: 50%;
      width: 24px;
      height: 24px;
      bottom: -12px;
    }

    .wheel.left { left: 15px; }
    .wheel.right { right: 15px; }

    #road {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 100px;
      background: #444;
    }

    .lane {
      position: absolute;
      width: 40px;
      height: 10px;
      background: #fff;
      top: 45px;
      animation: moveLane 2s linear infinite;
    }

    @keyframes moveLane {
      0% { left: 100%; }
      100% { left: -40px; }
    }
  </style>
</head>
<body>
  <div id="sun"></div>
  <div id="cloud">
    <div class="cloud-part"></div>
    <div class="cloud-part"></div>
    <div class="cloud-part"></div>
  </div>
  <div id="car">
    <div class="wheel left"></div>
    <div class="wheel right"></div>
  </div>
  <div id="road">
    <!-- Lane markers -->
    <div class="lane" style="animation-delay: 0s;"></div>
    <div class="lane" style="animation-delay: 0.5s;"></div>
    <div class="lane" style="animation-delay: 1s;"></div>
    <div class="lane" style="animation-delay: 1.5s;"></div>
  </div>

  <script>
    const sun = document.getElementById('sun');
    const cloud = document.getElementById('cloud');
    const car = document.getElementById('car');

    let sunX = 50, cloudX = 0, carX = 0;

    function animateSun() {
      sunX += 0.5;
      if (sunX > window.innerWidth) sunX = -100;
      sun.style.left = sunX + 'px';
      requestAnimationFrame(animateSun);
    }

    function animateCloud() {
      cloudX += 1;
      if (cloudX > window.innerWidth) cloudX = -150;
      cloud.style.left = cloudX + 'px';
      requestAnimationFrame(animateCloud);
    }

    function animateCar() {
      carX += 2;
      if (carX > window.innerWidth) carX = -150;
      car.style.left = carX + 'px';
      requestAnimationFrame(animateCar);
    }

    animateSun();
    animateCloud();
    animateCar();
  </script>
</body>
</html>
